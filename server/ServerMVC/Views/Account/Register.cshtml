@model ServerMVC.Models.RegisterViewModel

@{
    Layout = "_Layout";
}

<h3 class="">Регистрация</h3>
<form asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="All" class="text-dangertext-center"></div>
    <div class="form-group">
        <input asp-for="Name" class="form-control textbox-dg font-weight-bold text-center"placeholder="Имя" type="text">
    </div>
    <div class="form-group">
        <input autocomplete="new-password" asp-for="Password" placeholder="Пароль" class="form-controltextbox-dg fontweight-bold text-center" type="password">
    </div>
    @* <span class="text-black" style="font-size: small; font-family:'Comic Sans MS'">Пароль должен бытьдлиной больше 6символов и иметь только латинские символы</span> *@
    <div class="form-group">
        <input autocomplete="new-password" asp-for="PasswordConfirm" placeholder="Подтвердите пароль"class="form-controltextbox-dg font-weight-bold text-center" type="password">
    </div>
    <a asp-controller="Account" asp-action="Login" class="btn btn-primary" type="button">Вход</a>
    <button class="btn btn-success btn-lg float-right" type="submit">Отправить</button>
</form>
