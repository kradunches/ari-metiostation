@model ServerMVC.Models.LoginViewModel

@{
    Layout = "_Layout";
}

<h3 class="">Вход в аккаунт</h3>
<form autocomplete="on" method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="All" class=""></div>
    <div class="form-group">
        <input asp-for="Name" placeholder="Логин" class="form-control textbox-dg font-weight-bold textcenter"type="text">
        @* <div class="form-text">Длина логина должна быть от 3 до 20 символов.</div> *@
    </div>
    <div class="form-group">
        <input autocomplete="new-password" asp-for="Password" placeholder="Пароль" class="form-controltextbox-dg fontweight-bold ext-center" type="password">
    </div>
    <div class="d-grid gap-2 d-md-block float-right">
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary"type="button">Регистрация</a>
        <button class="btn btn-success">Отправить</button>
    </div>
</form>
