@model IQueryable<Measurement>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="page" lang="ru">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial scale=1">
    <title>Метеостанция Меньково</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="favicon.ico">
</head>

<body class="page__body">
    <div class="page__container">
        <header class="main-header">
            <div class="main-header__top">
                <img src="img/calendar.png" alt="Календарь">
                <img src="img/agrophysLogo.png" alt="Логотип АФИ">
                <button>Войти</button>
            </div>
            <img class="main-header__fieldimg" src="img/dayOfTheField.png" alt="День поля">
        </header>
        <main class="main-info">
            <h1 class="visually-hidden">Сайт метеостанции поля в Меньково</h1>
            @Html.Partial("Charts")
            <div class="main-info table-wrapper">
                @{
                    <table class="table-wrapper__table">
                        <thead>
                            <tr><th>date</th><th>t_pov</th><th>far</th><th>rh</th><th>t</th><th>winddir</th><th>wind</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var measure in Model)
                            {
                                <tr>
                                    <td>@measure.measure_date</td>
                                    <td>@measure.t_pov</td>
                                    <td>@measure.far</td>
                                    <td>@measure.rh</td>
                                    <td>@measure.t</td>
                                    <td>@measure.winddir</td>
                                    <td>@measure.wind</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="main-info">
                <div class="main-info__map-wrapper">
                    <img src="img/menkovomap.png" alt="Заглушка для карты">
                </div>
            </div>
        </main>
        <footer class="main-footer">
            <h1 class="visually-hidden">Контакты</h1>
            <div class="main-footer__wrapper">
                <p class="main-footer__address">Поле Меньково blockhin@email.ru</p>
                <p class="main-footer__about">Программа разработана в 170 отделе ФГБНУ АФИ</p>
                <img class="main-footer__logo" src="img/agrophysLogo.png" alt="Логотип АФИ">
            </div>
        </footer>

        <div class="login visually-hidden">
            <div class="login__main">
                <span class="login__main-text form-text">Почта:</span>
                <input class="login__main-input form-input" type="text" size="40">
                <span class="login__main-text form-text">Пароль:</span>
                <input class="login__main-input form-input" type="text" size="40">
                <button class="login__main-button form-button">Войти</button>
                <button class="login__main-button form-button">Регистрация</button>
                <a class="login__main-link form-link">Забыли пароль?</a>
            </div>
        </div>

        <div class="registration visually-hidden">
            <div class="registration">
                <span class="registration__main-text form-text">Почта:</span>
                <input class="registration__main-input form-input" type="text" size="40">
                <span class="registration__main-text form-text">Пароль:</span>
                <input class="registration__main-input form-input" type="text" size="40">
                <span class="registration__main-text form-text">Введите пароль повторно:</span>
                <input class="registration__main-input form-input" type="text" size="40">
                <button class="registration__main-button form-button">Регистрация</button>
            </div>
        </div>

        <div class="forgot visually-hidden">
            <div class="forgot__main">
                <span class="forgot__main-text form-text">Пожалуйста, введите почту, которую Вы указывал при регистрации, на неё придет новый пароль</span>
                <span class="forgot__main-text form-text">Почта:</span>
                <input class="forgot__main-input form-input" type="text" size="40">
                <button class="forgot__main-button form-button">Отправить письмо с новым паролем</button>
            </div>
        </div>

        <div class="success visually-hidden">
            <div class="success__main">
                <span class="success__main-text form-text">Письмо успешно отправлено</span>
                <button class="success__main-button form-button">Закрыть</button>
            </div>
        </div>
    </div>
    <script src="_content/Blazor-ApexCharts/js/apex-charts.min.js"></script>
    <script src="js/fieldchart.js"></script>
</body>

</html>